<Project Sdk="Peachpie.NET.Sdk">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>netstandard2.0</TargetFramework>
	<Description>Set of Symfony Skeleton .NET class libraries in PHP</Description>
    <AssemblyName>PeachPied.Symfony.Skeleton</AssemblyName>
	<PackageId>PeachPied.Symfony.Skeleton</PackageId>
	<PackageVersion>1.0.0</PackageVersion>
	<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	<PackageOutputPath>..\..\Peachpied-Symfony-Nuget-Repository\</PackageOutputPath>
	<IncludeBuildOutput>false</IncludeBuildOutput>
  </PropertyGroup>
  
  <ItemGroup>
    <Compile Remove=".\**" />
    <EmbeddedResource Remove=".\**" />
    <None Remove=".\**" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Symfony.Framework-bundle" Version="1.0.0" />
    <PackageReference Include="Symfony.Debug" Version="1.0.0" />
    <PackageReference Include="Symfony.Dotenv" Version="1.0.0" />
    <PackageReference Include="Symfony.Polyfill-mbstring" Version="1.0.0" />
    <PackageReference Include="Symfony.Routing" Version="1.0.0" />
	<PackageReference Include="Symfony.Filesystem" Version="1.0.0" />
  </ItemGroup>
</Project>