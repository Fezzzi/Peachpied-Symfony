<Project Sdk="Peachpie.NET.Sdk/">

  <!-- Sets package-specific properties based on name and path -->
  <Import Project="..\..\..\Props\loadPropsConfig.props" />
  
  <!--  Configurates build properties packageId and AssemblyName -->
  <Import Project="..\..\..\Props\buildPropsConfig.props" />
  
  <PropertyGroup>
    <AdditionalExcludes>
      $(LibraryPath)ExpressionLanguage.php;
      $(LibraryPath)ExpressionLanguageProvider.php
    </AdditionalExcludes>
  </PropertyGroup>
  
  <!-- Adds compile and content ItemGroup Node. 
      Adds to Content's Exclude attr additional excludes  -->
  <Import Project="..\..\..\Props\compileContentConfig.props" />
  
  <ItemGroup>
    <PackageReference Include="Psr.Container" Version="1.0.0" />
    <PackageReference Include="Symfony.Config" Version="4.2.3" />
    <PackageReference Include="Symfony.Contracts" Version="1.0.2" />
    <PackageReference Include="Symfony.Finder" Version="4.2.3" />
  </ItemGroup>
  
</Project>