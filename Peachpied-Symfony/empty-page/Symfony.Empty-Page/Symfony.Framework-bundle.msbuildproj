<Project Sdk="Peachpie.NET.Sdk/">

  <!-- Sets package-specific properties based on name and path -->
  <Import Project="..\..\..\Props\loadPropsConfig.props" />
  
  <!--  Configurates build properties packageId and AssemblyName -->
  <Import Project="..\..\..\Props\buildPropsConfig.props" />
  
  <PropertyGroup>
    <AdditionalExcludes>
      $(LibraryPath)Client.php;
      $(LibraryPath)command\XliffLintCommand.php;
    </AdditionalExcludes>
  </PropertyGroup>
  
  <!-- Adds compile and content items node. 
      Adds additional excludes to content.  -->
  <Import Project="..\..\..\Props\compileContentConfig.props" />
  
  <ItemGroup>
    <PackageReference Include="Symfony.Cache" Version="4.2.3" />
    <PackageReference Include="Symfony.Console" Version="4.2.3" />
    <PackageReference Include="Symfony.Routing" Version="4.2.3" />
    <PackageReference Include="Symfony.Templating" Version="4.2.10" />
    <PackageReference Include="Symfony.Translation" Version="4.2.8" />
    <PackageReference Include="Symfony.Yaml" Version="4.2.3" />
    <PackageReference Include="Symfony.Polyfill-intl-icu" Version="1.11.0" />
  </ItemGroup>
  
</Project>